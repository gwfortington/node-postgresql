{
  "name": "node-postgresql",
  "version": "1.0.0",
  "description": "A simple Node.js application that connects to a PostgreSQL database.",
  "author": "Grant Fortington",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "rimraf dist && tsc",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "test": "rimraf --glob \"test/**/*.js\" && tsc -p tsconfig-test.json && node --env-file .test.env --test"
  },
  "dependencies": {
    "node-debug": "github:gwfortington/node-debug",
    "pg": "^8.12.0"
  },
  "devDependencies": {
    "@tsconfig/recommended": "^1.0.6",
    "@types/node": "^22.2.0",
    "@types/pg": "^8.11.6",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "prettier": "^3.3.2",
    "rimraf": "^6.0.0"
  },
  "exports": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ]
}
